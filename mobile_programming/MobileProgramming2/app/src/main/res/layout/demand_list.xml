<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:paddingBottom="24dp">

    <TextView
            android:text="학번"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_list_std_num" android:textSize="24sp"
            android:textColor="@android:color/black" android:textStyle="bold"
            android:layout_marginTop="28dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="24dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="24dp"/>
    <TextView
            android:text="물품이름"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_list_item_name_rent" android:textSize="24sp"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toTopOf="parent" android:textColor="@android:color/black"
            app:layout_constraintStart_toEndOf="@+id/text_list_std_num" android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp" android:textStyle="bold"/>
</android.support.constraint.ConstraintLayout>