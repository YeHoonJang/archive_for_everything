<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
            android:text="Player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/playerName"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#0000FF"
            android:textStyle="bold" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="53dp"/>
    <TextView
            android:text="birth year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/birthYear"
            app:layout_constraintTop_toBottomOf="@+id/playerName" app:layout_constraintStart_toStartOf="@+id/playerName"
    />
    <TextView
            android:text="agency"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:id="@+id/agency"
            app:layout_constraintBaseline_toBaselineOf="@+id/birthYear" android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>