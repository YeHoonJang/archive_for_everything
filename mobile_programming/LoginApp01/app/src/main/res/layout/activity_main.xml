<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/img_login_bg"
        tools:context=".MainActivity">
    <ImageView
            android:layout_width="144dp"
            android:layout_height="wrap_content" app:srcCompat="@drawable/img_logo"
            android:id="@+id/imageView"
            android:layout_marginTop="103dp" android:layout_marginBottom="147dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/cardView"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="Log In"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@+id/imageView" android:layout_marginTop="297dp"
            android:layout_marginStart="40dp" android:layout_marginBottom="57dp"
            app:layout_constraintBottom_toTopOf="@+id/cardView"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:textColor="#FFFFFF"/>

    <android.support.v7.widget.CardView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp" android:id="@+id/cardView"
            app:cardElevation="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="28dp"
            android:layout_marginBottom="204dp" app:layout_constraintTop_toBottomOf="@+id/textView2">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/cardview_light_background">
            <EditText
                    android:inputType="textPersonName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/edit_username"
                    android:ems="10"
                    android:layout_margin="16dp"
                    android:hint="username"/>
            <EditText
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/edit_passwd"
                    android:ems="10"
                    android:layout_margin="16dp"
                    android:hint="password"/>

            <Button
                    android:text="로그인"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/btn_login" android:elevation="0dp"
                    android:background="@color/colorPrimary"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>