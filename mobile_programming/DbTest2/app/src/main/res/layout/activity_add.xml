<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.dbtest2.AddActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="176dp"
            tools:layout_editor_absoluteX="0dp" android:layout_marginTop="140dp"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/linearLayout2">
        <EditText
                android:text="물품 이름"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/addItem"/>
        <EditText
                android:text="물품 개수"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/addCount"/>
    </LinearLayout>
    <Button
            android:text="등록"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addBtn" tools:ignore="MissingConstraints"
            android:layout_marginBottom="224dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2"/>
</androidx.constraintlayout.widget.ConstraintLayout>
