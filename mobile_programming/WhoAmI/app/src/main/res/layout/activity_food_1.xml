<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FavoriteActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/linearLayout3" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
        <TextView
                android:text="user name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/user_name" android:textAlignment="center"
                android:textStyle="bold" android:textSize="24sp"/>
        <Button
                android:text="뒤로 가기"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="683dp"
                tools:layout_editor_absoluteX="161dp" android:id="@+id/back_btn"
                android:background="#70C38EC7"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="20dp">
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="300dp" app:srcCompat="@drawable/jeju_shrimp"
                    android:id="@+id/imageView6"/>
            <TextView
                    android:text="제주 여행 갔을 때 먹었던 딱새우회에요\n제주에 가서 직접 잡은 딱새우회는 정말 부드럽고 맛있어요\n또 먹으러 가고 싶어요 T.T"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView3"
                    android:layout_marginVertical="10dp" android:textAlignment="center"/>
            <View
                    android:id="@+id/divider2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#736F6E"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="8dp"
                tools:layout_editor_absoluteX="8dp">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="20dp">
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="300dp" app:srcCompat="@drawable/japan_market1"
                        android:id="@+id/imageView8"/>
                <TextView
                        android:text="교토의 니시키 시장 구경을 가서 찍은 일본 채소가게에요\n무가 한국과 다르게 동글동글해서 너무 귀여웠어요\n시장의 분위기는 한국과 비슷하더라구요\n맛있는 시장표 음식도 많이 먹었답니다!"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView5"
                        android:layout_marginVertical="10dp" android:textAlignment="center"/>
                <View
                        android:id="@+id/divider4"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#736F6E"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="20dp">
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="300dp" app:srcCompat="@drawable/party"
                        android:id="@+id/imageView9"/>
                <TextView
                        android:text="고등학교 친구들과 송년회 파티를 했어요!\n파티룸을 빌려서 직접 꾸미고\n맛있는 음식도 시켜서 밤새도록 수다를 떨었어요\n고등학교 때로 돌아간 거 같아서 너무 좋았어요"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView6"
                        android:layout_marginVertical="10dp" android:textAlignment="center"/>
                <View
                        android:id="@+id/divider5"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#736F6E"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="20dp">
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="300dp" app:srcCompat="@drawable/sokcho_yehoon"
                        android:id="@+id/imageView10"/>
                <TextView
                        android:text="속초 가족여행 갔을 때에요\n속초 외옹치항 산책길을 걸으면서 찍었어요\n햇빛이 반사되는 바다가 너무 아름다웠어요!"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView7"
                        android:layout_marginVertical="10dp" android:textAlignment="center"/>
                <View
                        android:id="@+id/divider6"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#736F6E"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>