<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <ImageView
            android:layout_width="83dp"
            android:layout_height="98dp" app:srcCompat="@drawable/umbrella"
            android:id="@+id/img_umbrella" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"/>

    <TextView
            android:text="물품이름"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_item_name" android:textSize="18sp"
            android:textColor="@android:color/black" android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/img_umbrella" android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp" android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="대여 날짜: 2019/00/00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_amount" android:textSize="18sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/text_item_name"
            app:layout_constraintStart_toEndOf="@+id/img_umbrella"
            android:layout_marginStart="32dp"/>
    <TextView
            android:text="반납 날짜: 2019/00/00"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:id="@+id/text_return" android:textSize="18sp"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/text_item_name"
            app:layout_constraintStart_toEndOf="@+id/img_umbrella"
            android:layout_marginStart="32dp"/>
</android.support.constraint.ConstraintLayout>