<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddItem">

    <TextView
            android:text="물품 등록하기"
            android:layout_width="match_parent"
            android:id="@+id/textView7"
            tools:layout_editor_absoluteX="0dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline" android:layout_height="wrap_content"
            tools:layout_editor_absoluteY="16dp" android:textAlignment="viewStart"/>
    <EditText
            android:text="물품 수량"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:id="@+id/item_amount" app:layout_constraintStart_toEndOf="@+id/textView6"
            android:layout_marginStart="8dp" app:layout_constraintBaseline_toBaselineOf="@+id/textView6"/>
    <Button
            android:text="물품 등록하기"
            android:layout_width="189dp"
            android:layout_height="48dp" tools:layout_editor_absoluteY="142dp"
            tools:layout_editor_absoluteX="150dp" android:id="@+id/add_item_btn"/>
    <TextView
            android:text="물품 수량"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            tools:layout_editor_absoluteX="150dp" android:id="@+id/textView6" android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/textView5" android:layout_marginTop="16dp"/>
    <EditText
            android:text="물품 이름"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:id="@+id/item_name" app:layout_constraintStart_toEndOf="@+id/textView5"
            android:layout_marginStart="8dp" app:layout_constraintBaseline_toBaselineOf="@+id/textView5"/>
    <TextView
            android:text="물품 이름"
            android:layout_width="wrap_content"
            android:layout_height="24dp" tools:layout_editor_absoluteY="71dp"
            tools:layout_editor_absoluteX="150dp" android:id="@+id/textView5" android:textSize="18sp"/>
    <ImageView
            android:layout_width="117dp"
            android:layout_height="124dp" app:srcCompat="@drawable/ic_menu_gallery"
            tools:layout_editor_absoluteY="72dp" tools:layout_editor_absoluteX="16dp" android:id="@+id/imageView2"/>

</android.support.constraint.ConstraintLayout>